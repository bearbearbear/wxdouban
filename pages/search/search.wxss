.search-bar {
  height: 88rpx;
  width: 100%;
  background-color: #efeff4;
  display: flex;
  flex-direction: row;
}

.search-bar .search-bar_box {
  display: flex;
  flex-direction: row;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  margin: 10rpx;
  background-color: #fff;
  width: 80%;   
  position: relative; 
}

.icon-search {
  margin: 15rpx 20rpx;
}
.search_bar_input {
  width: 75%;
  margin: 5rpx 0; 
  /* line-height: 28rpx */
}
.search-bar_clear {
  margin-left: 10rpx;
  margin-top: 8rpx;
  flex: 1;
  right: 10rpx;
  top: 0;
   position: absolute; 
}
.search-bar .search-bar_cancel-btn {
  flex: 1;  
  width: 20%;
  text-align: center;
  margin: 15rpx 0;
  color: #09bb07;
  white-space: nowrap;
}

